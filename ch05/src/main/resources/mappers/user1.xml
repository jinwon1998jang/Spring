<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User1Mapper">
    <insert id="insertUser1">
        INSERT INTO USER1 VALUES (#{user_id}, #{user_name}, #{birth_date}, #{user_age})
    </insert>
    <select id="selectAllUser1" resultType="kr.co.ch05.dto.User1DTO">
        select
        user_id,
        user_name,
        birth_date,
        user_age
        from USER1
    </select>
    <select id="selectUser1" resultType="kr.co.ch05.dto.User1DTO">
        select * from USER1 WHERE user_id=#{user_id}
    </select>
    <update id="updateUser1">
        UPDATE USER1 SET
        user_name=#{user_name},
        birth_date=#{birth_date},
        user_age=#{user_age}
        WHERE
        user_id=#{user_id}
    </update>
    <delete id="deleteUser1">
        DELETE FROM USER1 WHERE user_id=#{user_id}
    </delete>

</mapper>